<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rezigo.rezigo.HomeActivity">

    <Button
        android:id="@+id/button_proposer"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_orange_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="onClick"
        android:text="Proposer un trajet"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@+id/button_chercher" />

    <Button
        android:id="@+id/button_chercher"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:background="@android:color/holo_orange_dark"
        android:fontFamily="sans-serif-smallcaps"
        android:onClick="onClick"
        android:text="Chercher un trajet"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_proposer"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <include
        layout="@layout/raw_navbar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/include"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="374dp"
        android:layout_height="113dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/road"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="75dp"
        android:clickable="true"
        android:tint="@android:color/background_light"
        app:backgroundTint="@android:color/holo_orange_dark"
        app:fabSize="mini"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:rippleColor="@android:color/background_light"
        app:srcCompat="@drawable/ic_profil"
        tools:layout_editor_absoluteX="323dp" />


</android.support.constraint.ConstraintLayout>
